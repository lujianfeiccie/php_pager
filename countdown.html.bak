<script LANGUAGE="javascript">   
var dstYear = 2014;
var dstMonth = 1;
var dstDate = 1;
var dstTheme = "神马商城";
function dsttime(obj)
{
   document.getElementById(obj).innerText=  dstYear +"年"+dstMonth+"月"+dstDate+"日";
}
</script>
<form name="form1">   
<div align="center" align="center">   
<center>
<span class="title">离<span id="show"></span><strong><span id="theme"></span></strong>的Alpha版完成还有:<br></span>
<br>

<span id="showtime" class="showtime"></span>
</center>   
